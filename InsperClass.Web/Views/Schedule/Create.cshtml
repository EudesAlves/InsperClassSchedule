@model InsperClass.Domain.Entity.Schedule

@{
    ViewData["Title"] = "Adicionar";
}

<h3>Adicionar Novo Horário</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Curso</label>
                @Html.DropDownListFor(model => model.CourseId, (SelectList)ViewBag.Courses, "Selecione", new { @class = "form-control", @id = "slcCourse" } )
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label">Classe</label>
                <select asp-for="ClassId" class="form-control" id="slcClass"
                        asp-items="@ViewBag.Classes">
                    <option>Selecione</option>
                </select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeekDay" class="control-label">Dia</label>
                <select asp-for="WeekDay" class="form-control"
                        asp-items="@ViewBag.WeekDays">
                    <option>Selecione</option>
                </select>
                <span asp-validation-for="WeekDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Horário Inicial</label>
                <input asp-for="StartTime" class="form-control col-md-4 time" type="time" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">Horário Final</label>
                <input asp-for="EndTime" class="form-control col-md-4" time type="time" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<div>
    <a class="btn btn-danger" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}

